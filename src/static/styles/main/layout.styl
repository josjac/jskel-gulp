body,
html
  background #000
  height 100%

#wrap
  width 100%
  height 100%
  margin 0 auto

#canvas
  width 100%
  height 100%
  margin 0 auto
  perspective 1200px

.page
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background #AAF

.title
  text-align center

#pointer
  position absolute
  top 0
  left 0
  background green
  display block
  width 40px
  height 40px
  border-radius 100%
  z-index 999
  display none
